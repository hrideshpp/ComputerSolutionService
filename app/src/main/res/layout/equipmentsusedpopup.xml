<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <Spinner
            android:id="@+id/spnr_equipmenttype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resolved"
            android:paddingLeft="5dp"/>
    <Spinner
            android:id="@+id/spnr_equipmentmodel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resolved"
            android:paddingLeft="5dp"/>
    <Spinner
            android:id="@+id/spnr_equipmentconfiguration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resolved"
            android:paddingLeft="5dp"/>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/input_equipmentqty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/edittext_equipmentqty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/strqty"
                android:singleLine="false"/>
    </android.support.design.widget.TextInputLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/strsubmit"/>
</LinearLayout>